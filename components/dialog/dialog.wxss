.dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 100;
}
.dialog-container {
  position: fixed;
  z-index: 101;
  background-color: #FFFFFF;
  text-align: center;
}
.dialog-container.middle {
  top: 50%;
  left: 50%;
  width: 500rpx;
  transform: translate3d(-50%, -50%, 0);
  padding: 25rpx 45rpx 30rpx 45rpx;
}
.dialog-container.bottom {
  bottom: 0;
  left: 0;
  width: 100%;
}