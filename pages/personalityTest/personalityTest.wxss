/* pages/personalityTest/personalityTest.wxss */
.container {
  padding: 0 32rpx 200rpx 32rpx;
  overflow: hidden;
}
.des {
  padding: 20rpx 0;
  border-bottom: 1rpx #DDDDDD solid;
  font-size: 28rpx;
  color: #263238;
}
.question {
  padding-top: 20rpx;
}
.order, .title {
  font-size: 36rpx;
  font-family:PingFangSC-Semibold;
  color: #263238;
}
.order {
  margin-bottom: 10rpx;
}
.title {
  margin-bottom: 40rpx;
}
.answers {

}
.answer {
  height: 120rpx;
  text-align: left;
  padding-left: 55rpx;
  font-size: 36rpx;
  color: #676F73;
  background-color: #FAFAFA;
  margin-bottom: 30rpx;
  border-radius:6rpx;
  display: flex;
  align-items: center;
}
.answer text {
  line-height: 1.2;
}
.answer.active {
  background-color: #E8EAEB;
}
.prev-btn {
  font-size: 36rpx;
  color: #2196F3;
  background-color: transparent;
  border: 0;
  text-align: center;
  margin-top: 59rpx;
}
.submit-btn {
  font-size: 36rpx;
  color: #FFFFFF;
  background-color: #F76260;
  text-align: center;
  line-height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.hover-class {
  opacity: 0.9;
}
.canvas-container {
  position: absolute;
  left: 10000px;
  top: 0;
  z-index: -1;
}
.canvas {
  width: 375px;
  height: 667px;
}

.dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 100;
  padding-top: 190rpx;
}
.dialog-content {
  width: 500rpx;
  height: 600rpx;
  background-color: #FFFFFF;
  margin: 0 auto;
  text-align: center;
  border-radius: 14rpx;
  padding-top: 70rpx;
  box-sizing: border-box;
}
.dialog-content image {
  width: 144rpx;
  margin-bottom: 60rpx;
}
.dialog-content view {
  font-size: 24rpx;
  color: #4D4D4D;
  margin-bottom: 20rpx;
}
.btn-register {
  width:450rpx;
  height:90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #FFFFFF;
  background:rgba(247,98,96,1);
  border-radius:45rpx;
  margin-top: 50rpx;
}
.hover-class {
  opacity: 0.9;
}