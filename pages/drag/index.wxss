.p-container {
  height: 100%;
  width: 100%;
  overflow: hidden;
  position: relative;
}
.recommand-wrap {
  position: absolute;
  top: -1000px;
  left: -1000px;
  width: 2000px;
  height: 2000px;
  background-color: #ccc;
}
.recommand-item {
  width: 710rpx;
  height: 1000rpx;
  box-shadow: 0 2px 2px 2px rgba(0, 0, 0, 0.1);
  background-color: transparent;
  border-radius: 10rpx;
}
image {
  width: 100%;
  height: 100%;
}
.btns {
  position: absolute;
  bottom: 0;
  left: 0;
}