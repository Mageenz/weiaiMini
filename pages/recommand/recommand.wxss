.container {
  height: 100vh;
  overflow: hidden;
  background-color: #EBEBEB;
  position: relative;
}
.tips {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10000;
  background-color: rgba(0, 0, 0, 0.8);
}
.tip {
  position: absolute;
}
.tip1 {
  width: 189rpx;
  height: 165rpx;
  bottom: 20rpx;
  left: 10rpx;
}
.tip2 {
  width: 219rpx;
  height: 269rpx;
  transform: translateX(-50%);
  left: 50%;
  top: 300rpx;
}
.tip3 {
  width: 328rpx;
  height: 125rpx;
  bottom: 20rpx;
  right: 60rpx;
}

.recommand-wrap {
  position: absolute;
  top: -1000px;
  left: -1000px;
  width: 2000px;
  height: 2000px;
  background-color: #E9E9E9;
}
.recommand-item {
  box-shadow: 0 2px 2px 2px rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  border-radius: 5px;
  background-color: #ffffff;
}
.recommand-item .photo {
  width: 100%;
  flex: 1;
  background-repeat: no-repeat;
  background-size: 100%;
  background-position: center;
  border-radius: 5px 5px 0 0;
}
.recommand-item .info {
  height: 172rpx;
  background-color: #ffffff;
  border-radius: 0 0 5px 5px;
}