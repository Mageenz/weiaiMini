.container {
  height: 100vh;
  overflow: hidden;
  background-color: #EBEBEB;
  position: relative;
}
.tips {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10000;
  background-color: rgba(0, 0, 0, 0.8);
}
.tip {
  position: absolute;
}
.tip1 {
  width: 189rpx;
  height: 165rpx;
  bottom: 20rpx;
  left: 10rpx;
}
.tip2 {
  width: 219rpx;
  height: 269rpx;
  transform: translateX(-50%);
  left: 50%;
  top: 300rpx;
}
.tip3 {
  width: 328rpx;
  height: 125rpx;
  bottom: 20rpx;
  right: 60rpx;
}

.recommend-wrap {
  position: absolute;
  top: -1000px;
  left: -1000px;
  width: 2000px;
  height: 2000px;
  background-color: #E9E9E9;
}
.recommend-item {
  box-shadow:0px 0px 16rpx 0px rgba(0,0,0,0.03);
  display: flex;
  flex-direction: column;
  border-radius: 11rpx;
  background-color: #ffffff;
}
.photo {
  width: 100%;
  flex: 1;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  border-radius: 5px 5px 0 0;
}
.info {
  height: 172rpx;
  background-color: #ffffff;
  border-radius: 0 0 5px 5px;
  padding: 25rpx 0 40rpx 35rpx;
  box-sizing: border-box;
}
.tag {
  padding: 8rpx 20rpx;
  border-radius: 4rpx;
  font-size:26rpx;
  margin-right: 20rpx;
}
.tag.age {
  border: 1rpx #F76260 solid;
  background-color: #F76260;
  color: #ffffff;
}
.tag.age image {
  width: 16rpx;
  height: 22rpx;
  margin-right: 20rpx;
}
.tag.height {
  border: 1rpx #FFB342 solid;
  background-color: #FFB342;
  color: #ffffff;
}
.tag.education, .tag.job {
  border: 1rpx #919191 solid;
  color: #919191;
}
.search {
  width:170rpx;
  height:70rpx;
  background:rgba(0,0,0, 0.7);
  border-radius:100rpx 0px 0px 100rpx;
  position: absolute;
  top: 60rpx;
  right: 0;
  z-index: 1001;
  color: #ffffff;
  padding-left: 40rpx;
}
.search image {
  width: 25rpx;
  height: 26rpx;
  margin-right: 20rpx;
}
.search-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1002;
  background-color: rgba(0,0,0, 0.7);
}
.search-content {
  background-color: #ffffff;
  padding: 60rpx 0;
}
.search-item {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding-left: 30rpx;
  padding-right: 50rpx;
  margin-bottom: 30rpx;
  border-radius: 3rpx;
}
.search-item text {
  margin-right: 60rpx;
  font-size: 30rpx;
}
.search-item picker {
  flex: 1;
}
.search-value {
  height: 80rpx;
  padding-left: 30rpx;
  background-color: #F0F0F0;
  text-align: left;
}
.search-value image {
  width: 14rpx;
  height: 8rpx;
}
.btn-search {
  width: 550rpx;
  margin: 100rpx auto 0 auto;
}